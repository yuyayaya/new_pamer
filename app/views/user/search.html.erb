<h1>User search</h1>
<%= form_with url: search_user_index_path, method: :get, local: true do |f| %>
  <%= f.text_field :name, value: params[:name] %>
  <%= f.select :hobby, options_for_select(User.hobbies, selected: params[:hobby]), include_blank: "選択してください" %>
  <%= f.submit :search %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.hobby %></td>
      </tr>
    <% end %>
  </tbody>
</table>